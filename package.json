{
  "name": "griko.id",
  "version": "0.0.0",
  "packageManager": "pnpm@7.9.0",
  "workspaces": [
    "packages/*",
    "website"
  ],
  "scripts": {
    "build": "pnpm --dir website build",
    "dev": "pnpm --dir website dev",
    "export": "pnpm --dir website export",
    "lint": "turbo run lint",
    "prepare": "husky install",
    "start": "pnpm --dir website start",
    "website": "pnpm --dir website"
  },
  "devDependencies": {
    "env-cmd": "^10",
    "husky": "^8",
    "lint-staged": "^13",
    "postinstall-postinstall": "^2",
    "shx": "^0",
    "turbo": "^1"
  },
  "resolutions": {
    "@next/eslint-plugin-next": "^12",
    "node-fetch": "npm:node-fetch-native@latest"
  },
  "eslintConfig": {
    "extends": [
      "./packages/eslint-config"
    ],
    "ignorePatterns": [
      "node_modules"
    ],
    "root": true
  },
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "prettier": "./packages/prettier-config",
  "private": true,
  "license": "MIT"
}
